---
import { JOBS } from "./jobsData";
---

<>
  {
    JOBS.map((ele) => {
      return (
        <div class='card'>
          <img src={ele.image} alt='project image' />
          <div class='texts'>
            <h2>{ ele.name }</h2>
            <p>{ ele.description }</p>
          </div>
          <div class='tags'>
            {
              ele.tags.map(el => (
                <p class='tag'>{el}</p>
              ))
            }
          </div>

          <div class='actions'>
            <a href={ele.code} target='_blank' rel='noopener noreferrer'>
              Code
              <div class='separator1' />
              <div class='separator2' />
              <div class='separator3' />
              <div class='diagonal1Up' />
              <div class='diagonal2Up' />
              <div class='lineUp' />
            </a>

            <a href={ele.link} target='_blank' rel='noopener noreferrer'>
              Web
              <div class='separator1' />
              <div class='separator2' />
              <div class='separator3' />
              <div class='diagonal1Up' />
              <div class='diagonal2Up' />
              <div class='lineUp' />
            </a>
          </div>
        </div>
      )
    })
  }
</>

<style>
  .card {
    width: 500px;
    height: max-content;
    margin: 10px;
    display: flex;
    flex-flow: column;
    border: 1px solid var(--color-black);
    outline: none;
    font-size: 16px;
    border-radius: 15px;
    overflow: hidden;
  }

  .card img {
    width: 100%;
    margin: 0 auto;
    object-fit: contain;
  }

  .card .texts {
    width: 90%;
    margin: 5px auto;
    display: flex;
    flex-flow: column;
  }

  .card .texts h2 {
    margin: 10px auto;
		font-weight: 300;
		text-align: center;
		font-size: 2em;
		font-family: 'Aileron';
    border-bottom: 1px solid var(--color-black);
		color: var(--color-black);
		z-index: 10;
  }

  .card .texts p {
    width: 100%;
    margin: auto;
    color: var(--color-black);
    font-size: 1em;
    text-wrap: balance;
  }

  .card .tags {
    width: 90%;
    margin: 5px auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .card .tags .tag {
    margin: 10px;
    padding: 2px 10px;
    background-color: var(--color-black);
    color: var(--color-white);
    border-radius: 200px;
    font-size: 12px;
  }

  .card .actions {
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .card .actions a {
    position: relative;
    margin: 10px;
    padding: 5px 10px;
    border-radius: 5px;
    text-decoration: none;
    color: var(--color-black);
    border: 1px solid var(--color-black);
    font-size: 14px;
    transition: 100ms 100ms ease-in;
  }

  .card .actions a::before {
    content: '';
    position: absolute;
    top: 2px;
    right: 2px;
    width: 0px;
    height: 0px;
    background-color: var(--color-black);
    border-radius: 20px;
    transition: 100ms 100ms ease-in;
  }

  .card .actions a:hover {
    padding: 5px 50px;
  }

  .card .actions a:hover::before {
    width: 3px;
    height: 3px;
  }

  /* -------------------------------- */

  .card .actions a .separator1,
  .card .actions a .separator2,
  .card .actions a .separator3 {
    position: absolute;
    top: -5px;
    left: 50%;
    width: 0%;
    height: 10px;
    margin: auto;
    background-color: var(--color-white);
    transition: 100ms 100ms ease-in;
    z-index: 3;
  }

  .card .actions a .separator1 {
    z-index: 1;
  }

  .card .actions a .separator2 {
    height: 6px;
    top: 0px;
  }

  .card .actions a .separator3 {
    height: 6px;
    top: -10px;
  }

  .card .actions a:hover .separator1 {
    width: 40%;
    left: 30%;
  }

  .card .actions a:hover .separator2,
  .card .actions a:hover .separator3 {
    width: 60%;
    left: 20%;
  }

  .card .actions a .diagonal1Up,
  .card .actions a .diagonal2Up {
    position: absolute;
    top: -4px;
    left: 50%;
    width: 0px;
    height: 5px;
    margin: auto;
    background-color: var(--color-black);
    transform: rotate(-40deg);
    transition: 100ms 100ms ease-in;
    z-index: 2;
  }

  .card .actions a .diagonal2Up {
    transform: rotate(40deg);
  }

  .card .actions a:hover .diagonal1Up {
    left: 29%;
    width: 15px;
  }

  .card .actions a:hover .diagonal2Up {
    left: 63%;
    width: 15px;
  }

  .card .actions a .lineUp {
    position: absolute;
    top: -4px;
    left: 50%;
    width: 0%;
    height: 1px;
    margin: auto;
    background-color: var(--color-black);
    transition: 100ms 100ms ease-in;
    z-index: 5;
  }

  .card .actions a:hover .lineUp {
    left: 35%;
    width: 30%;
  }
</style>