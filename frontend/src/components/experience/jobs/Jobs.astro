---
import Background from '../../Background.astro'
import JobList from './JobsList.astro'
---

<section class="jobsCont">
  <button id="butonAction" class="butonAction">
    <p>Some Jobs</p>
    <div class='separator1' />
    <div class='separator2' />
    <div class='separator3' />
    <div class='diagonal1Up' />
    <div class='diagonal2Up' />
    <div class='lineUp' />
  </button>

  <section id="modal" class="close">
    <Background />
    <button id="modalClose" class='modalClose'>
      <div class='backG' />
      <div class='circles' />
    </button>
    <section class="titleCont">
      <h2>JOBS</h2>
    </section>
    <section class="modalCont">
      <JobList />
    </section>
  </section>
</section>

<script>
  const modal = document.getElementById('modal')
  const btn = document.getElementById('butonAction')
  const btnClose = document.getElementById('modalClose')

  btn.addEventListener('click', (evt) => {
    modal.classList.toggle('open')
  })

  btnClose.addEventListener('click', (evt) => {
    modal.classList.toggle('open')
  })

</script>

<style>
  .jobsCont {
    width: 100%;
    margin: 20px auto;
    display: flex;
    flex-flow: column;
  }

  .jobsCont .butonAction {
    position: relative;
    margin: auto;
    padding: 10px 20px;
    background-color: #FFF0;
    border-radius: 5px;
    border: none;
    outline: none;
    border: 1px solid var(--color-black);
    transition: 100ms 100ms ease-in;
    cursor: pointer;
  }

  @media screen and (max-width: 1024px) {
    .jobsCont .butonAction {
      margin: 10px auto 150px auto;
    }
  }

  .jobsCont .butonAction::before,
  .jobsCont .butonAction::after {
    content: '';
    position: absolute;
    top: 2px;
    right: 2px;
    width: 0px;
    height: 0px;
    background-color: var(--color-black);
    border-radius: 20px;
    transition: 100ms 100ms ease-in;
  }

  .jobsCont .butonAction:hover {
    padding: 10px 60px;
  }

  .jobsCont .butonAction:hover::before {
    width: 5px;
    height: 5px;
  }

  .jobsCont .butonAction p {
    width: 100%;
    margin: auto;
    color: var(--color-black);
    font-weight: 600;
    text-transform: uppercase;
  }

  .jobsCont .butonAction:hover p {
    font-weight: 800;
  }

  /* -------------------------------- */

  .jobsCont .butonAction .separator1,
  .jobsCont .butonAction .separator2,
  .jobsCont .butonAction .separator3 {
    position: absolute;
    top: -5px;
    left: 50%;
    width: 0%;
    height: 10px;
    margin: auto;
    background-color: var(--color-white);
    transition: 100ms 100ms ease-in;
    z-index: 3;
  }

  .jobsCont .butonAction .separator1 {
    z-index: 1;
  }

  .jobsCont .butonAction .separator2 {
    height: 6px;
    top: 0px;
  }

  .jobsCont .butonAction .separator3 {
    height: 6px;
    top: -10px;
  }

  .jobsCont .butonAction:hover .separator1 {
    width: 40%;
    left: 30%;
  }

  .jobsCont .butonAction:hover .separator2,
  .jobsCont .butonAction:hover .separator3 {
    width: 60%;
    left: 20%;
  }

  .jobsCont .butonAction .diagonal1Up,
  .jobsCont .butonAction .diagonal2Up {
    position: absolute;
    top: -4px;
    left: 50%;
    width: 0px;
    height: 5px;
    margin: auto;
    background-color: var(--color-black);
    transform: rotate(-40deg);
    transition: 100ms 100ms ease-in;
    z-index: 2;
  }

  .jobsCont .butonAction .diagonal2Up {
    transform: rotate(40deg);
  }

  .jobsCont .butonAction:hover .diagonal1Up {
    left: 29%;
    width: 15px;
  }

  .jobsCont .butonAction:hover .diagonal2Up {
    left: 63%;
    width: 15px;
  }

  .jobsCont .butonAction .lineUp {
    position: absolute;
    top: -4px;
    left: 50%;
    width: 0%;
    height: 1px;
    margin: auto;
    background-color: var(--color-black);
    transition: 100ms 100ms ease-in;
    z-index: 5;
  }

  .jobsCont .butonAction:hover .lineUp {
    left: 35%;
    width: 30%;
  }

  /* ===================================== */
  /* ========== MODAL ==================== */

  .jobsCont .close {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 100dvw;
    height: 100dvh;
    margin: auto;
    display: none;
    flex-flow: column;
    background-color: var(--color-white);
    z-index: 100;
    transform: translate(-50%, -50%);
  }

  .jobsCont .open {
    display: flex;
  }

  .jobsCont .modalClose {
    position: absolute;
    top: 2%;
    right: 2.5%;
    width: 30px;
    height: 30px;
    margin: auto;
    border: none;
    outline: none;
    background-color: transparent;
    cursor: pointer;
    z-index: 10;
  }

  .jobsCont .modalClose::before {
    content: 'Close';
    position: absolute;
    bottom: -80%;
    left: 50%;
    margin: auto;
    padding: 3px 10px;
    display: none;
    background-color: var(--color-black);
    color: var(--color-white);
    border-radius: 200px;
    font-size: 12px;
    transform: translate(-50%, 0%);
  }

  .jobsCont .modalClose:hover::before {
    display: flex;
  }

  @media screen and (max-width: 768px) {
    .jobsCont .modalClose {
      right: 7dvw;
    }
  }

  .jobsCont .modalClose .backG {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 50%;
    height: 50%;
    border-radius: 50%;
    background-color: var(--color-red);
    filter: blur(5px);
    opacity: .8;
    transform: translate(-50%, -50%);
  }

  .jobsCont .modalClose .circles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: auto;
    border: 1px dashed var(--color-blackOp);
    border-radius: 50%;
    box-sizing: border-box;
  }

  .jobsCont .modalClose .circles:hover {
    border: 1px dashed var(--color-black);
    -webkit-animation: rotate360Pipes 12s infinite linear;
	        animation: rotate360Pipes 12s infinite linear;
  }

  @-webkit-keyframes rotate360Pipes {
    0% {
      -webkit-transform: rotate(0);
              transform: rotate(0);
    }
    100% {
      -webkit-transform: rotate(360deg);
              transform: rotate(360deg);
    }
  }
  @keyframes rotate360Pipes {
    0% {
      -webkit-transform: rotate(0);
              transform: rotate(0);
    }
    100% {
      -webkit-transform: rotate(360deg);
              transform: rotate(360deg);
    }
  }

  .jobsCont .modalClose .circles::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 70%;
    height: 70%;
    margin: auto;
    border: 1px dashed var(--color-white);
    border-radius: 50%;
    box-sizing: border-box;
    transform: translate(-50%, -50%);
    opacity: .7;
  }

  /* --------------------------- */

  .jobsCont .titleCont {
    position: absolute;
    bottom: 0%;
    left: 50%;
    width: 40%;
    height: 45px;
    display: flex;
    background:
      repeating-linear-gradient(
        60deg,
        var(--color-white) 0%,
        var(--color-blackOp) 0.2%,
        var(--color-blackOp) 2%,
        var(--color-white) 2.2%,
        var(--color-white) 7%
      );
    z-index: 10;
    transform: translate(-50%, -50%);
  }

  .jobsCont .titleCont h2 {
    margin: auto;
    padding: 5px 10%;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    background-color: var(--color-white);
  }

  /* ============================================== */

  .jobsCont .modalCont {
    width: 97%;
    max-height: 90%;
    margin: 2dvh auto auto auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    border-radius: 10px;
    background-color: var(--color-white);
    z-index: 5;
    overflow-y: auto;
    overflow-x: hidden;
  }

  @media screen and (max-width: 1024px) {
    .jobsCont .modalCont {
      margin: 2dvh auto auto auto;
    }
  }
</style>