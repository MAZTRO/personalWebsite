---
const { item } = Astro.props;
---

<section class="pointItem">
  <h3>{item.title} - <span>{item.subtitle}</span></h3>
  <p class="dates">{item.dates}</p>
  <p>{item.description}</p>
  <hr>
</section>

<style>
  .pointItem {
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-flow: column;
  }

  .pointItem h3 {
    width: 100%;
    margin: 0 auto;
    font-weight: 600;
		text-align: start;
		font-size: 1.5rem;
		line-height: 1.5rem;
		font-family: "Mulish", sans-serif;
		color: var(--color-black);
  }

  .pointItem p {
    width: 95%;
    margin: 0 auto;
    font-weight: 300;
		text-align: start;
		font-size: 1rem;
		line-height: 1rem;
		font-family: "Mulish", sans-serif;
		color: var(--color-black);
  }

  .pointItem p.dates {
    font-weight: 500;
    margin: 5px auto;
  }

  .pointItem hr {
    width: 90%;
    height: 1px;
    margin: 20px auto;
    border: none;
    background-color: var(--color-black);
  }
</style>