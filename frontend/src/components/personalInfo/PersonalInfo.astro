---
import CircleSkills from "./CircleSkills.astro"
import ReactLogo from '../../assets/svg/ReactLogo.astro'
import NodeJs from '../../assets/svg/NodeJs.astro'
import NextJs from '../../assets/svg/NextJs.astro'
import Python from '../../assets/svg/Python.astro'
import C from '../../assets/svg/C.astro'
import Rust from '../../assets/svg/Rust.astro'
---

<div class='personalInfoCont'>
  <h2>Jonatan Mazo</h2>
  <h1>Frontend developer</h1>
  <p>Passionate about building performant and visually appealing UIs with React, Next.js, and custom CSS. Experienced in collaborating with backend teams to manage large datasets and enhance user experience through data visualization. Skilled in creating unique 3D UI elements (personal projects).</p>
  <div class='infoCircleCont'>
  </div>

  <section class='skillsCont'>
    <h3>My skills</h3>
    <article class='card'>
      <CircleSkills />
      <div class='info'>
        <div class='elem'>
          <p>React</p>
          <ReactLogo />
        </div>

        <div class='elem'>
          <p>Node</p>
          <NodeJs />
        </div>

        <div class='elem'>
          <p>NextJs</p>
          <NextJs />
        </div>
      </div>
    </article>

    <h3>Secundary skills</h3>
    <article class='card'>
      <CircleSkills />
      <div class='info'>
        <div class='elem'>
          <p>Python</p>
          <Python />
        </div>

        <div class='elem'>
          <p>C</p>
          <C />
        </div>

        <div class='elem'>
          <p>Rust</p>
          <Rust />
        </div>
      </div>
    </article>
  </sectio>
</div>

<style>

  .personalInfoCont {
    width: 100%;
    margin: auto;
    display: flex;
    flex-flow: column;
  }
  h2 {
    width: 100%;
    margin: auto;
		font-weight: 300;
		text-align: center;
		font-size: clamp(3em, 5vw, 5em);
		font-family: 'Aileron';
		color: var(--color-black);
		z-index: 10;
	}

  h1 {
    width: 100%;
		margin: 10px auto;
		font-weight: 300;
		text-align: center;
		font-size: clamp(0.8em, 2vw, 1.5em);
		color: var(--color-black);
    letter-spacing: 5px;
    text-transform: uppercase;
		z-index: 10;
	}

  h3 {
    width: 100%;
		margin: 50px auto 5px auto;
    text-align: center;
		font-weight: 800;
		font-size: 1.2em;
		line-height: 1.2em;
		color: var(--color-black);
    letter-spacing: 5px;
    text-transform: uppercase;
		z-index: 10;
	}

  p {
    width: 90%;
    margin: 20px auto 0px auto;
    font-size: 1rem;
    text-align: center;
		color: var(--color-black);
    text-wrap: balance;
    z-index: 5;
  }

  .skillsCont {
    width: 100%;
    margin: 10px auto;
    display: flex;
    flex-flow: column;
    justify-content: center;
  }

  .skillsCont .card {
    position: relative;
    width: max-content;
    height: 80px;
    margin: 0px auto 30px auto;
    display: flex;
  }

  .skillsCont .card .info {
    width: 100%;
    height: 100%;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    z-index: 5;
  }

  .skillsCont .card .info::before {
    content: '';
    position: absolute;
    bottom: 0%;
    left: 0%;
    width: 100%;
    height: 1px;
    background-color: var(--color-black);
    z-index: 10;
  }

  .skillsCont .card .info .elem {
    margin: 10px;
    display: flex;
    flex-flow: column;
  }

  .skillsCont .card .info p {
    width: 100%;
    margin: 0px auto 5px auto;
    font-size: 10px;
    color: var(--color-black);
    text-align: center;
    font-weight: 600;
  }
</style>