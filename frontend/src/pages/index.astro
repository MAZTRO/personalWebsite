---
import Layout from '../layouts/Layout.astro';
import Background from '../components/Background.astro'
import Experience from '../components/experience/Experience.astro'
import PersonalInfo from '../components/personalInfo/PersonalInfo.astro';
import CirclePI from "../components/personalInfo/CirclePI.astro"
import Contact from "../components/contact/Contact.astro"
---

<Layout title="Jonatan Mazo | Portfolio">
	<main>
		<div class='backCont'>
			<div class='backComp'>
				<CirclePI />
			</div>
			<Background />
		</div>
		<section class="divisor">
			<section class="left">
				<PersonalInfo />
			</section>
			<section class="right">
				<Experience />
			</section>
			<Contact />
		</section>
	</main>
</Layout>

<style>
	main {
		position: relative;
		width: 100dvw;
		height: 100dvh;
		max-width: 1920px;
		margin: auto;
		padding: var(--b); /* space for the border */
		box-sizing: border-box;
		display: flex;
		flex-flow: column;
	}

	main .backCont {
		position: absolute;
		width: 100dvw;
		height: 100dvh;
		max-width: 1920px;
		margin: auto;
		display: flex;
	}

	main .backCont .backComp {
		position: absolute;
		width: 100dvw;
		height: 100dvh;
		max-width: 1920px;
		margin: auto;
		display: flex;
		background: #FFF0;
    filter: blur(3px);
	}

	/* ============================== */

	.divisor {
		width: 100%;
		height: 100%;
		margin: auto;
		display: flex;
		z-index: 10;
	}

	.divisor .left {
		width: 50%;
		height: 96dvh;
		max-height: 96dvh;
		margin: auto;
		display: flex;
		overflow-y: auto;
		overflow-x: hidden;
		scrollbar-gutter: auto;
	}

	.divisor .right {
		width: 35%;
		height: 98%;
		margin: auto 1% auto auto;
		display: flex;
	}

	@media screen and (max-width: 1024px) {
		main {
			overflow: hidden;
		}
		.divisor {
			width: 96%;
			height: 96%;
			flex-flow: column;
			overflow-y: auto;
			overflow-x: hidden;
		}
		.divisor .left {
			width: 100%;
			height: unset;
			max-height: unset;
			overflow-y: unset;
			overflow-x: unset;
		}

		.divisor .right {
			width: 100%;
			height: 98%;
			margin: auto;
		}
	}
</style>
