---
import Layout from '../layouts/Layout.astro';
import Background from '../components/Background.astro'
import Experience from '../components/experience/Experience.astro'
---

<Layout title="Jonatan Mazo | Portfolio">
	<main>
		<Background />
		<section class="divisor">
			<section class="left">
				<h1>Jonatan mazo</h1>
			</section>
			<section class="right">
				<Experience />
			</section>
		</section>
	</main>
</Layout>

<style>
	main {
		position: relative;
		width: 100dvw;
		height: 100dvh;
		max-width: 1920px;
		margin: auto;
		padding: var(--b); /* space for the border */
		box-sizing: border-box;
		display: flex;
		flex-flow: column;
	}
	h1 {
		margin-bottom: 1em;
		font-weight: 300;
		text-align: center;
		font-size: 4rem;
		line-height: 4rem;
		font-family: 'Aileron';
		color: var(--color-black);
		z-index: 10;
	}

	.divisor {
		width: 100%;
		height: 100%;
		margin: auto;
		display: flex;
		flex-wrap: wrap;
		z-index: 10;
	}

	.divisor .left {
		width: 50%;
		margin: auto;
		background-color: tomato;

	}

	.divisor .right {
		width: 35%;
		height: 98%;
		margin: auto 1% auto auto;
		display: flex;
	}
</style>
